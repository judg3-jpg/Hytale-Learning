{
  "manifest_version": 3,
  "name": "Moderator Statistics Dashboard",
  "version": "1.0.0",
  "description": "Quick access dashboard for tracking moderator performance metrics and statistics",
  "author": "Hytale Learning",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Moderator Dashboard"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "standalone-dashboard.js", "sidepanel/dashboard.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "open-dashboard": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "Open Moderator Dashboard"
    }
  }
}

