{
  "manifest_version": 3,
  "name": "Moderator Statistics Dashboard",
  "version": "1.0.0",
  "description": "Quick access dashboard for tracking moderator performance metrics and statistics",
  "author": "Hytale Learning",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Moderator Dashboard"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-dashboard": {
      "suggested_key": {
        "default": "Alt+M"
      },
      "description": "Open Moderator Dashboard"
    }
  }
}

