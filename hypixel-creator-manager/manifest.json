{
  "manifest_version": 3,
  "name": "Hypixel Creator Manager",
  "version": "2.1.0",
  "description": "Streamline your Hypixel creator sheet management with CSV import/export, full dashboard, and side panel - no API needed!",
  "author": "Judge",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "sidePanel"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Hypixel Creator Manager"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "quick-review": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Quick Review - Mark as reviewed by Judge"
    },
    "note-inactive": {
      "suggested_key": {
        "default": "Alt+1"
      },
      "description": "Insert note: Channel inactive"
    },
    "note-non-gaming": {
      "suggested_key": {
        "default": "Alt+2"
      },
      "description": "Insert note: Non-gaming content"
    },
    "note-reviewed": {
      "suggested_key": {
        "default": "Alt+3"
      },
      "description": "Insert note: Content reviewed - meets standards"
    }
  }
}
