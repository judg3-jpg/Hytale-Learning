{
  "manifest_version": 3,
  "name": "Hypixel Creator Manager",
  "version": "5.0.0",
  "description": "Creator management dashboard with bold new design - Cyan/Gold theme, neon glows, and smooth animations",
  "author": "Judge",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.mojang.com/*",
    "https://www.googleapis.com/*",
    "https://api.twitch.tv/*",
    "https://id.twitch.tv/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Hypixel Creator Manager"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "quick-review": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Quick Review - Mark as reviewed by Judge"
    },
    "note-inactive": {
      "suggested_key": {
        "default": "Alt+1"
      },
      "description": "Insert note: Channel inactive"
    },
    "note-non-gaming": {
      "suggested_key": {
        "default": "Alt+2"
      },
      "description": "Insert note: Non-gaming content"
    },
    "note-reviewed": {
      "suggested_key": {
        "default": "Alt+3"
      },
      "description": "Insert note: Content reviewed - meets standards"
    }
  }
}
